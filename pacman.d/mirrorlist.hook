[Trigger]
Operation = Upgrade
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Updating pacman-mirrorlist with reflector and removing pacnew...
When = PostTransaction
Depends = reflector
Exec = /bin/sh -c "sudo reflector --latest 8 --protocol https --sort rate --save /etc/pacman.d/mirrorlist && echo -e \"\nNew mirrorlist in /etc/pacman.d/mirrorlist:\" && cat /etc/pacman.d/mirrorlist && rm -f /etc/pacman.d/mirrorlist.pacnew"
